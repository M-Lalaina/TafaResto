{% extends 'base.html.twig' %} {% block title %}
  Dishes
{% endblock %} {% block body %}
  <body style="background: #202124">
    {% block _navbar %}
      {% include 'partials/_nav.html.twig' %}
    {% endblock %}

    <main style="padding: 10rem 0 0 0">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 col-md-6 col-sm-8 d-lg-flex justify-content-center">
            <div class="menu_img">
              <figure>
                <img alt="..."
                  class="image"
                  src="{{ asset('uploads/images/' ~ dish.coverImage) }}"
                  style="border-radius: 15px"
                  width="100%" />

                <figcaption class="text-start px-3">
                  <p class="fw-bold">
                    Description
                  </p>
                  {{ dish.description }}
                </figcaption>
              </figure>
            </div>
          </div>

          <div class="col p-4 show_menu">
            <div>
              <h1 class="title">
                Menu
              </h1>
            </div>

            <div class="content">
              <table class="table">
                <thead>
                  <tr>
                    <th>
                      Product
                    </th>
                    <th>
                      Ingredients
                    </th>
                    <th>
                      Price
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      {{ dish.name }}
                    </td>
                    <td>
                      {{ dish.ingredients }}
                    </td>
                    <td class="fw-bold" style="color: #a16336">
                      {{ dish.price }}$
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end">
          <div class="row py-5 text-end">
            <div class="mb-2">
              <button class="btn_backhome py-2" style="width:90%">
                <a href="{{ path('app_home') }}" class="fw-bold">
                  Back to Home menu
                </a>
              </button>
            </div>

            <div>
              <button class="btn_tocart py-2" style="width:90%">
                <a href="{{
                  path(
                    'app_order',
                    {
                      id: dish.id
                    }
                  )
                  }}">
                  Add to my Card Shop
                </a>
              </button>
            </div>
          </div>
        </div>
      </div>
    </main>

    {% block footer %}
      {% include 'partials/_footer.html.twig' %}
    {% endblock %}
  </body>
{% endblock %}
