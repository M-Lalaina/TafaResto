{% extends 'base.html.twig' %}

{% block title %}Dishes index{% endblock %}

{% block body %}
    <h1>Dishes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ingredients</th>
                <th>Description</th>
                <th>Price</th>
                <th>CoverImage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.name }}</td>
                <td>{{ dish.ingredients }}</td>
                <td>{{ dish.description }}</td>
                <td>{{ dish.price }}</td>
                <td>{{ dish.coverImage }}</td>
                <td>
                    <a href="{{ path('app_dishes_show', {'id': dish.id}) }}">show</a>
                    <a href="{{ path('app_dishes_edit', {'id': dish.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dishes_new') }}">Create new</a>
{% endblock %}
