{% extends 'base.html.twig' %}

{% block title %}
  Contact
{% endblock %}

{% block body %}
  <body style="background: #202124">
    {% block _navbar %}
      {% include 'partials/_nav.html.twig' %}
    {% endblock %}

    <!-- CONTNENT -->
    <main>
      <div>
        <div class="row py-5 mt-5">
          <div class="d-flex justify-content-center align-items-center"
            id="contact_us">
            <p class="fs-3 text-uppercase fw-bold px-5 py-3 title">
              Contact Us
            </p>
          </div>
        </div>

        <!-- /GET IN TOUCH WITH US/ -->

        <div class="row py-5">
          <div class="d-flex justify-content-center align-items-center pb-5">
            <div>
              <p class="container-fluid fs-5 fw-bold text-center pb-5 m-0">
                Get in touch with us !
              </p>
              <div class="d-lg-flex justify-content-center gap-3">
                <div class="mx-3 text-center py-3 purple_color"
                  style="width: 300px">
                  <p class="m-0">
                    <i class="fa-solid fa-mobile-screen fs-4"></i>
                  </p>
                  <p class="fw-bold">
                    Phone
                  </p>
                  <p class="text-black m-0 bg_purple p-2 h-50 d-flex align-items-center justify-content-center">
                    +261 32 197 51
                  </p>
                </div>

                <div class="mx-3 text-center py-3 purple_color"
                  style="width: 300px">
                  <p class="m-0">
                    <i class="fa-solid fa-location-dot fs-4"></i>
                  </p>
                  <p class="fw-bold">
                    Adresse
                  </p>
                  <p class="text-black m-0 bg_purple p-2 h-50 d-flex align-items-center justify-content-center">
                    Villa MAHI lot II U 89 Bis E
                    <br />
                    Cit√© Planton Ambaranjana, Antananariovo 101
                  </p>
                </div>

                <div class="mx-3 text-center py-3 purple_color"
                  style="width: 300px">
                  <p class="m-0">
                    <i class="fa-solid fa-envelope fs-4"></i>
                  </p>
                  <p class="fw-bold">
                    Email
                  </p>
                  <p class="text-black m-0 bg_purple p-2 h-50 d-flex align-items-center justify-content-center">
                    lalaina@passion4humanity.com
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- /SEND QUESTIONS/ -->

        <div class="container formulaires_contact px-5">
          <p class="text-center pb-5 fw-bold fs-3" style="color : #9a9393">
            If you got any questions <br /> please feel free to send us a message
          </p>
          <!-- NAME -->

          <div class="row">
            <div class="col my-2">
              <div class="form-group">
                <input class="p-3 input"
                  id="form_name"
                  type="text"
                  name="name"
                  placeholder="Nom" />
              </div>
            </div>
          </div>

          <!-- EMAIL -->

          <div class="row">
            <div class="col-lg my-2">
              <div class="form-group">
                <input class="p-3 input"
                  id="form_email"
                  type="email"
                  name="email"
                  placeholder="Email" />
              </div>
            </div>

            <!-- PHONE -->

            <div class="col-lg my-2">
              <div class="form-group">
                <input class="p-3 input"
                  id="form_phone"
                  name="phone"
                  placeholder="Phone" />
              </div>
            </div>
          </div>

          <!-- MESSAGE -->

          <div class="row my-2">
            <div class="form-group">
              <textarea class="p-3 textarea"
                id="form_message"
                required="required"
                placeholder="votre message ici..."></textarea>
            </div>
          </div>

          <!-- SEND BUTTON -->

          <div class="d-flex justify-content-center py-3">
            <button id="submit_btn" class="rounded py-3 px-4 fs-6">
              Envoyer
            </button>
          </div>
        </div>

        <!-- /CONNECT WITH US/ -->

        <div class="container py-5">
          <div>
            <h3 class="fs-2 fw-bold text-center">
              Follow us with!
            </h3>
          </div>

          <div class="d-flex justify-content-center">
            <i class="fa-brands fa-square-facebook fs-1 mx-5"
              style="color : #9a9393">

            </i>

            <i class="fa-brands fa-square-instagram fs-1 mx-5"
              style="color : #9a9393">

            </i>

            <i class="fa-brands fa-square-twitter fs-1 mx-5"
              style="color : #9a9393">

            </i>

            <i class="fa-brands fa-linkedin fs-1 mx-5" style="color : #9a9393">

            </i>
          </div>
        </div>

        <!-- /FIND-US/ -->

        <div>
          <iframe class="map"
            src="https://www.google.com/maps/embed?pb=!1m24!1m12!1m3!1d3774.4223675449784!2d47.536828014898575!3d-18.9126899871818!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m9!3e6!4m3!3m2!1d-18.9160344!2d47.5373728!4m3!3m2!1d-18.9094431!2d47.541355499999995!5e0!3m2!1sfr!2smg!4v1665131825995!5m2!1sfr!2smg"
            width="100%"
            height="450"
            style="border: 0"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </main>

    <!-- / -->

    {% block footer %}
      {% include 'partials/_footer.html.twig' %}
    {% endblock %}
  </body>
{% endblock %}
