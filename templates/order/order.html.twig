{% extends 'base.html.twig' %}

{% block title %}
  Order
{% endblock %}

{% block body %}
  <body style="background: #202124">
    {% block _navbar %}
      {% include 'partials/_nav.html.twig' %}
    {% endblock %}

    <main style="padding: 10rem 0 0 0">
      <div class="container">
        <div>
          <h1 class="title">
            Your Cart
          </h1>
        </div>
        <div>
          <div>
            <div class="d-flex gap-5">
              <div>
                {{ dish.name }}
              </div>

              {#  #}
              {{ form_start(form) }}
              <div>
                <div class="food-card_order-count">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <button class="btn btn-outline-secondary minus-btn"
                        type="button"
                        id="button-addon1">
                        <i class="fa fa-minus"></i>
                      </button>
                    </div>

                    {{ form_widget(form) }}

                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary add-btn"
                        type="button"
                        id="button-addon1">
                        <i class="fa fa-plus"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              {#  #}

              <div>
                {{ dish.price }}
              </div>
            </div>

            <button class="btn">{{ button_label|default('VALIDER') }}</button>

            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </main>

    {% block footer %}
      {% include 'partials/_footer.html.twig' %}
    {% endblock %}
  </body>
{% endblock %}
